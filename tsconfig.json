{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2020",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "paths": {
            "$lib/*": ["src/lib/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
